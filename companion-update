#!/usr/bin/env bash
set -e

if [[ $(/usr/bin/id -u) -ne 0 ]]; then
    echo "Must be run as root. Try sudo companion-update"
    exit 1
fi

# stop companion
systemctl stop companion

# fetch new code
cd /usr/local/src/companionpi
git pull -q

# do the update
./update.sh $1

# restart companion
systemctl start companion

echo "Update is complete"
